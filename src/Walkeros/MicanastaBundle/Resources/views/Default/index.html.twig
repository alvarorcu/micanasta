{% extends 'WalkerosMicanastaBundle::layout.html.twig' %}
{% block body %}

{% for producto in productos %}

	{% if producto.estadisticaactual.categoria.codigo == "TA" %}
	<div class="col-lg-4 product">
		<section class="panel bg-success lter no-borders">
			<div class="panel-body" id="manzanadelicia" style="background:url('{{producto.randomimage}}') no-repeat center center; height: 290px;">
				<a class="pull-left var text-success" href="#">
					{% if producto.variacion > 0 %}
					<i class="icon-arrow-up"></i>
					<small>+{{producto.variacion}}%</small>
					{% elseif producto.variacion == 0 %}
					<i class="icon-circle-blank"></i>
					<small>&plusmn{{producto.variacion}}%</small>
					{% else %}
					<i class="icon-arrow-down"></i>
					<small>{{producto.variacion}}%</small>
					{% endif %}
				</a>
			</div>
			<footer class="panel-footer dk">
				<div class="row">
					<div class="text-center padder">
						<strong class="h4 name">{{producto.nombre}}</strong><small>S/.</small><span class="h3">{{producto.precio}}</span><small>kg</small>
					</div>
				</div>
			</footer>
		</section>
	</div>
	{% elseif producto.estadisticaactual.categoria.codigo == "TB" %}
	<div class="col-lg-4 product">
		<section class="panel bg-warning no-borders hbox dk">
			<div class="panel-body" id="palta" style="background: url('{{producto.randomimage}}') no-repeat center center; height: 250px !important; width: 100% !important;">
				<a class="pull-left var text-success" href="#">
					{% if producto.variacion > 0 %}
					<i class="icon-arrow-up"></i>
					<small>+{{producto.variacion}}%</small>
					{% elseif producto.variacion == 0 %}
					<i class="icon-circle-blank"></i>
					<small>&plusmn{{producto.variacion}}%</small>
					{% else %}
					<i class="icon-arrow-down"></i>
					<small>{{producto.variacion}}%</small>
					{% endif %}
				</a>
			</div>
			<aside class="s-side">
				<div class="rot">
					<strong class="h4 name">{{producto.nombre}}</strong>
				</div>
				<div class="price">
					<small>S/.</small><br><span class="h3">{{producto.precio}}</span><br><small>kg</small>
				</div>
			</aside>
		</section>
	</div>
	{% else %}
	<div class="col-lg-4 product">
		<section class="panel bg-danger no-borders">
			<header class="panel-footer dk">
				<div class="row">
					<div class="text-center padder">
						<strong class="h4 name">{{producto.nombre}}</strong><small>S/.</small><span class="h3">{{producto.precio}}</span><small>kg</small>
					</div>
				</div>
			</header> 
			<div class="panel-body" id="platanoseda" style="background:url('{{producto.randomimage}}') no-repeat center center; height: 290px;">
				<a class="pull-left var text-success" href="#">
					{% if producto.variacion > 0 %}
					<i class="icon-arrow-up"></i>
					<small>+{{producto.variacion}}%</small>
					{% elseif producto.variacion == 0 %}
					<i class="icon-circle-blank"></i>
					<small>&plusmn{{producto.variacion}}%</small>
					{% else %}
					<i class="icon-arrow-down"></i>
					<small>{{producto.variacion}}%</small>
					{% endif %}	
				</a>
			</div>                  
		</section>
	</div>

	{% endif %}            
 
{% endfor %}
{% endblock %}
