<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mi Canasta{% endblock %}</title>
    {% block javascripts %}
    {% if app.environment == 'dev' %}
    <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
    <!-- Bootstrap -->
    <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
    <!-- Sparkline Chart -->
    <script src="{{ asset('js/charts/sparkline/jquery.sparkline.min.js') }}" type="text/javascript"></script>
    <!-- App -->                
    <script src="{{ asset('js/app.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/app.plugin.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/app.data.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/libs/jquery.isotope.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/main.js') }}" type="text/javascript"></script>
    {% else %}        
    {% endif %}
    {% endblock %}

    {% block page_javascripts %}
    {% endblock %}

    {% block stylesheets %}
    <link href="{{ asset('css/bootstrap.css') }}" type = "text/css" rel="stylesheet">
    <link href="{{ asset('css/animate.css') }}" type = "text/css" rel="stylesheet">
    <link href="{{ asset('css/font-awesome.min.css') }}" type = "text/css" rel="stylesheet">
    <link href="{{ asset('css/font.css') }}" type = "text/css" rel="stylesheet">
    <link href="{{ asset('css/plugin.css') }}" type = "text/css" rel="stylesheet">
    <link href="{{ asset('css/app.css') }}" type = "text/css" rel="stylesheet">
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    <section class="hbox stretch">
        <!-- .aside -->
        <aside class="bg-light aside-sm" id="nav">
            <section class="vbox">
                <header class="dker nav-bar">
                    <a class="btn btn-link visible-xs" data-toggle="class:nav-off-screen" data-target="body">
                        <i class="icon-reorder"></i>
                    </a>
                    <a href="#" class="nav-brand" data-toggle="fullscreen">mi canasta</a>
                    <a class="btn btn-link visible-xs" data-toggle="class:show" data-target=".nav-user">
                        <i class="icon-comment-alt"></i>
                    </a>
                </header>
                <footer class="footer bg-gradient hidden-xs">
                    <a href="modal.lockme.html" data-toggle="ajaxModal" class="btn btn-sm btn-link m-r-n-xs pull-right">
                        <i class="icon-off"></i>
                    </a>
                    <a href="#nav" data-toggle="class:nav-vertical" class="btn btn-sm btn-link m-l-n-sm">
                        <i class="icon-reorder"></i>
                    </a>
                </footer>
                    <section>
                    <!-- nav -->
                        <nav class="nav-primary hidden-xs">
                            <ul class="nav">
                                <li class="active">
                                    <a href="index.html">
                                        <i class="icon-laptop"></i>
                                        <span>Descubre</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                      <i class="icon-calendar"></i>
                                      <span>Calendario</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="index.html">
                                      <i class="icon-star"></i>
                                      <span>Favoritos</span>
                                  </a>
                                </li>
                            </ul>
                        </nav>
                    </section>
            </section>
        </aside>
        <!-- /.aside -->
        <!-- .vbox -->
        <section id="content">
            <section class="vbox">
                <header class="header bg-white b-b">
                    <div class="input-group buscador">
                        <input id="boxSearch" type="text" class="form-control">
                        <span id="buttonSearch" class="input-group-btn"> 
                            <a href="#" class="btn btn-white"><i class="icon-search"></i> Buscar</a>
                        </span>
                    </div>          
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-sm btn-success active">
                            <input type="checkbox" name="options" id="option1" value="1"> <i class="icon-ok text-active"></i>En Temporada
                        </label>
                        <label class="btn btn-sm btn-warning active">
                            <input type="checkbox" name="options" id="option2" value="1"> <i class="icon-ok text-active"></i>De Salida
                        </label>
                        <label class="btn btn-sm btn-danger active">
                            <input type="checkbox" name="options" id="option3" value="1"> <i class="icon-ok text-active"></i>Fuera de Temporada
                        </label>
                    </div>
                </header>

                <div id="container">{% block body %}{% endblock %}</div>
            </section>
                    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="body"></a>
        </section>
        <!-- /.vbox -->
    </section>
</body>  
</html>